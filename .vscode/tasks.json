{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "process",
      "label": "Cargo Run",
      "command": "cargo",
      "args": ["run", "./tests/js/test.js"],
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "env": { "RUST_BACKTRACE": "full" }
      },
      "presentation": {
        "clear": true
      }
    },
    {
      "type": "process",
      "label": "Get Tokens",
      "command": "cargo",
      "args": ["run", "--", "-t=Debug", "./tests/js/test.js"],
      "problemMatcher": ["$rustc"],
      "group": "build",
      "presentation": {
        "clear": true
      }
    },
    {
      "type": "process",
      "label": "Get AST",
      "command": "cargo",
      "args": ["run", "--", "-a=Debug", "./tests/js/test.js"],
      "problemMatcher": ["$rustc"],
      "group": "build",
      "presentation": {
        "clear": true
      }
    },
    {
      "type": "process",
      "label": "Cargo Test",
      "command": "cargo",
      "args": ["test"],
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "clear": true
      }
    },
    {
      "type": "process",
      "label": "Cargo Test Build",
      "command": "cargo",
      "args": ["test", "--no-run"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    }
  ]
}
