  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Launch",
      "windows": {
        "program": "${workspaceFolder}/target/debug/boa.exe"
      },
      "program": "${workspaceFolder}/target/debug/boa",
      "args": ["${workspaceFolder}/tests/js/test.js"],
      "sourceLanguages": ["rust"]
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Launch (VM)",
      "cargo": {
        "args": [
          "run",
          "--manifest-path",
          "./boa_cli/Cargo.toml",
          "--features",
          "vm"
        ]
      },
      "args": ["${workspaceFolder}/tests/js/test.js"],
      "sourceLanguages": ["rust"]
    }
  ]
}
